<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="Sistema1.0PU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>br.com.sistema.entidade.Endereco</class>
    <class>br.com.sistema.entidade.Pessoa</class>
    <class>br.com.sistema.entidade.Mesa</class>
    <class>br.com.sistema.entidade.PessoaJuridica</class>
    <class>br.com.sistema.entidade.PessoaFisica</class>
    <class>br.com.sistema.entidade.Usuario</class>
    <class>br.com.sistema.entidade.Perfil</class>
    <class>br.com.sistema.entidade.Funcionario</class>
    <class>br.com.sistema.entidade.Fornecedor</class>
    <class>br.com.sistema.entidade.Ingrediente</class>
    <class>br.com.sistema.entidade.ClienteOnline</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="hibernate.connection.username" value="root"/>
      <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
      <!--      <property name="hibernate.connection.password" value="root"/>-->
      <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/banco"/>
      <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
      <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
    </properties>
  </persistence-unit>
</persistence>
